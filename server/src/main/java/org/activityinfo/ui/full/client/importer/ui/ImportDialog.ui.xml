<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <g:HeaderPanel>

    <!-- Header -->
    <g:HTMLPanel>
      <h2>Import Wizard</h2>
    </g:HTMLPanel>

    <!-- Center -->
    <g:SimpleLayoutPanel ui:field="pagePanel" height="100%"/>

    <!-- Footer -->
    <g:HTMLPanel>
      <div class="pull-left">
        <g:Button ui:field="cancelButton" addStyleNames="btn btn-default" text="Cancel"/>&nbsp;
        <g:Button ui:field="prevButton" addStyleNames="btn btn-default" text="« Previous"/>&nbsp;
      </div>
      <div class="pull-right">
        <span ui:field="statusText"></span>
        <g:Button ui:field="nextButton" addStyleNames="btn btn-default" text="Next »"/>&nbsp;
        <g:Button ui:field="finishButton" addStyleNames="btn btn-primary" text="Finish"/>
      </div>
    </g:HTMLPanel>
  </g:HeaderPanel>
</ui:UiBinder> 