<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:a="urn:import:org.activityinfo.ui.full.client.importer.ui.mapping">
  <ui:style
      type='org.activityinfo.ui.full.client.importer.ui.mapping.ColumnMappingPage.Style'>
    .selectedColumn {
      background-color: yellow;
    }
  </ui:style>

  <g:HeaderPanel>

    <!-- Header -->
    <g:HTMLPanel>
      <h3>Match your tables columns</h3>
      <p>You need to tell ActivityInfo what each of your columns
        contains.
      </p>
    </g:HTMLPanel>

    <!-- Body -->
    <g:DockLayoutPanel unit="EM" height="100%">

      <g:center>
        <a:ColumnMappingGrid ui:field="dataGrid"
                             width="100%" height="100%"/>
      </g:center>
      <g:east size="30">
        <g:HTMLPanel>
          <h2 ui:field="columnChooserHeader"/>
          <a:FieldChooser ui:field="fieldChooser"/>
        </g:HTMLPanel>
      </g:east>
    </g:DockLayoutPanel>
  </g:HeaderPanel>

</ui:UiBinder> 