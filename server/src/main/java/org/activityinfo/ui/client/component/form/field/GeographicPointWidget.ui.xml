<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:ai="urn:import:org.activityinfo.ui.client.widget"
             xmlns:coord="urn:import:org.activityinfo.ui.client.widget.coord">

  <ui:with field="i18n" type="org.activityinfo.i18n.shared.UiConstants"/>

  <g:HTMLPanel>
    <div class="field-element">
      <label class="control-label"><ui:text from="{i18n.latitude}"/></label>
      <coord:CoordinateBox ui:field="latitudeBox" axis="LATITUDE"/>
    </div>
    <div class="field-element">
      <label class="control-label"><ui:text from="{i18n.longitude}"/></label>
      <coord:CoordinateBox ui:field="longitudeBox" axis="LONGITUDE"/>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>